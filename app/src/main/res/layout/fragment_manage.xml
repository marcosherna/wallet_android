<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".ui.views.manage.ManageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Primer LinearLayout con Spinner y Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:paddingEnd="8dp"
                android:paddingStart="0dp"
                android:background="@drawable/rounded_spinner"
                android:entries="@array/movements_options"/>

            <Button
                android:id="@+id/btnNewMovement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="48dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:drawableEnd="@drawable/ic_more_plans_24"
                android:drawableTint="?attr/colorOnPrimary"
                android:text="@string/txt_new_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Segundo LinearLayout con TextViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/cbMovementCheckAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTypeMovement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="MONTO"
                android:textAllCaps="true"
                android:text="@string/txt_amount"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="FECHA INGRESO-"
                android:text="@string/txt_date_entry"
                android:textAllCaps="true"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvIdPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="ID PLAN"
                android:textAllCaps="true"
                android:text="@string/txt_plan_id"
                android:textSize="14sp"/>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swpRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAddAccountMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <!-- FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeleteAccountMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:src="@drawable/baseline_delete_24"
        app:tint="@color/white"/>
</FrameLayout>
