<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".ui.views.contactMe.ContactMeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_btn_contact"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_who_contact"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"  />

        <EditText
            android:id="@+id/edt_who"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext"
            android:hint="@string/txt_placeholder_who_contact"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingHorizontal="6dp"
            android:ems="10"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/input_text_color"
            android:textColorHint="?attr/input_hint_text_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_which_contact"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"  />

        <EditText
            android:id="@+id/edt_which"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext"
            android:hint="@string/txt_placeholder_which_contact"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingHorizontal="6dp"
            android:ems="10"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/input_text_color"
            android:textColorHint="?attr/input_hint_text_color"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_detail_contact"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"  />

        <EditText
            android:id="@+id/edt_detail"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/txt_placeholder_detail_contact"
            android:minHeight="48dp"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/input_text_color"
            android:textColorHint="?attr/input_hint_text_color"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_info_description_contact"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_file_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_btn_select_file"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.TextButton.Snackbar"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txt_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="archivo.jpg"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"  />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:backgroundTint="?attr/dangerColor"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:text="@string/txt_btn_cancel"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_send"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:text="@string/txt_btn_send" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>