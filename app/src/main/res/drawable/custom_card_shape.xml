<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#B3E0E0E0" /> <!-- Color de la sombra -->
        </shape>
    </item>

    <!-- Fondo del "CardView" -->
    <item android:top="0dp"
        android:bottom="2dp"
        android:left="0dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
        </shape>
    </item>

</layer-list>